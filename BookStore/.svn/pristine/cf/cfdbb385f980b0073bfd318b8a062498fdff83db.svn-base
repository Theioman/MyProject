	/**
	 * 点击连接就把商品加入到最近浏览表
	 */
	@RequestMapping("addRecent.do")
	public ModelAndView addRecent(HttpSession session){
		ModelAndView mav = new ModelAndView();
		Users users = (Users) session.getAttribute("user");
		Book book = (Book) session.getAttribute("book");
		recentService.addRecent(book.getId(),users.getId());
        mav.setViewName("detail");
		return mav; 
	}
	
	
	/**
	 * 判断浏览表是否已存在
	 */
	@RequestMapping("ifRidIsExists.do")
	public String ifRidIsExists(HttpSession session){
		Users users = (Users) session.getAttribute("user");
		Book book = (Book) session.getAttribute("book");
		String status = null;
		if(recentService.ifRidIsExists(book.getId(), users.getId()) == true)
		{		status = "detail";

		}else{
			status = "redirect:addRecent.do";

		}
		return status;
	}
	
      
 
