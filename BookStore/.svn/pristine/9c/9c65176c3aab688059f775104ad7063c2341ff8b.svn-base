	public void addToCart(CartCommon common) {
		Integer cid=cartDao.findCidByUid(common);
		if(cid==null) {
			cartDao.addCart(common);
			cid=common.getId();
		}
		common.setCid(cid);
		if(cartDao.findDetail(common)==null) {
			cartDao.addDetail(common);
		}else {
			cartDao.updateDetail(common);
		}	
	}
	

}
