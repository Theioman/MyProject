 	<resultMap type="Recent" id="recentMap">
 	  <id column="id" jdbcType="INTEGER" property="id" /> 
 	    <association property="book" javaType="book">
 	            <result column="bname" property="bname"/>
 				<result column="bprice" property="bprice"/>
 				<result column="imgpath" property="imgpath"/>
 	    </association>
 	</resultMap>
	
 	<select id="selectRecent" resultMap="recentMap" parameterType="Integer">
 	     select
 	     r.id,
 	     b.bname,b.bprice,b.imgpath
 	     from recent r,book b
 	     where r.bid = b.id and uid = #{uid}
 	</select>              
    <insert id="addRecent" parameterType="Integer">
         insert into recent set uid = #{uid} ,bid=#{bid}
    </insert>
    
    <select id="ifRidIsExists" resultType="boolean" parameterType="Integer">
        <![CDATA[ select  count(bid) from recent where #{bid} in (select bid from recent where uid = #{uid}) and uid = #{uid} and bid = #{bid}]]>
    </select>
