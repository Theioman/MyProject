	<script type="text/javascript">
		function addCartBnum(id){
			$.ajax({
				url:"${pageContext.request.contextPath}/addCartBnum.do?date="+new Date().getTime(),
				type:"get",
				data:"id="+id,
				dataType:"json",
				success:function(data){
					$("#inp"+data.cdid).val(data.bnum);
				}
			});
			checkYS();
			$.ajax({
